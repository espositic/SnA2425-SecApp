<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">

    <display-name>secapp</display-name>

    <!-- cartella upload (fuori webapp Ã¨ meglio; cambiala se vuoi) -->
    <context-param>
        <param-name>upload.dir</param-name>
        <param-value>/tmp/secapp-uploads/profile</param-value>
    </context-param>

    <session-config>
        <session-timeout>15</session-timeout>
    </session-config>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>it.uniba.secapp.web.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>it.uniba.secapp.web.LoginServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>LogoutServlet</servlet-name>
        <servlet-class>it.uniba.secapp.web.LogoutServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LogoutServlet</servlet-name>
        <url-pattern>/logout</url-pattern>
    </servlet-mapping>

    <!-- Creazione proposta -->
    <servlet>
        <servlet-name>CreateProposalServlet</servlet-name>
        <servlet-class>it.uniba.secapp.web.CreateProposalServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProposalServlet</servlet-name>
        <url-pattern>/proposals/new</url-pattern>
    </servlet-mapping>

    <!-- Lista proposte -->
    <servlet>
        <servlet-name>ProposalListServlet</servlet-name>
        <servlet-class>it.uniba.secapp.web.ProposalListServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ProposalListServlet</servlet-name>
        <url-pattern>/proposals</url-pattern>
    </servlet-mapping>


    <filter>
        <filter-name>AuthFilter</filter-name>
        <filter-class>it.uniba.secapp.filter.AuthFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AuthFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>

    <security-constraint>
        <web-resource-collection>
            <web-resource-name>Tutta l'app</web-resource-name>
            <url-pattern>/*</url-pattern>
        </web-resource-collection>
        <user-data-constraint>
            <transport-guarantee>CONFIDENTIAL</transport-guarantee>
        </user-data-constraint>
    </security-constraint>

    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file>
    </welcome-file-list>
</web-app>
